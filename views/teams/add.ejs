<h2>Add Team</h2>
<form method="POST" action="/teams/add" class="form-group">

    <div>
        <label>Name</label>
        <input type="text" name="name" class="form-control"/>
    </div>
    <div>
        <label>Sports</label>
        <select name="sports" class="form-control">

            <% sports.forEach(function(sports){ %> 
            <option value="<%= sports._id%>"><%= sports.name%></option>
            <% }) %>
            
        </select>
    </div>
    <div>
        <label>Borough</label>
        <input type="text" name="borough" class="form-control"/>
    </div>
    <div>
        <label>Description</label>
        <textarea name="description" class="form-control"></textarea>
    </div>
    <div>
        <label>Minimum Age</label>
        <input type="number" name="minAge" class="form-control"/>
    </div>
    <div>
        <label>Level</label>
        <input type="text" name="level" class="form-control"/>
    </div>
    <div>
        <label>Contact Email</label>
        <input type="email" name="contactEmail" class="form-control" />
    </div>
    <div>
        <label>Contact Phone Number</label>
        <input type="text" name="contactPhone" class="form-control"/>
    </div>
    <div>
        <label>Address</label>
        <input type="text" name="address" class="form-control"/>
    </div>
    <input type="hidden" name="createdBy" value="<%= currentUser.id%>" />
    <br>
    <button type="submit" class="btn btn-outline-primary">Add Team</button>


</form>