<h2 class="form-header">Edit <%= team.name%></h2>
<form method="POST" action="/teams/update?_method=PUT" class="form-group">

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" id="name" name="name" class="form-control" value="<%= team.name%>" required/>
    </div>
    <div class="mb-3">
        <label for="boroughs" class="form-label">Borough</label>
        <select id="boroughs" name="boroughs" class="form-select" required>
            <option selected disabled hidden>Choose a London Borough</option>
            <option value="City of London">City of London</option>
            <option value="Hackney">Hackney</option>
            <option value="Hammersmith & Fulham">Hammersmith & Fulham</option>
            <option value="Islington">Islington</option>
            <option value="Kensington & Chelsea">Kensington & Chelsea</option>
            <option value="Southwark">Southwark</option>
            <option value="Westminister">Westminister</option>
        </select>
        <div id="boroughHelp" class="form-text">We currently only cover the central London boroughs, but hope to expand soon!</div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Team Description</label>
        <textarea id="description" rows="8" cols="40" name="description" class="form-control" vlue="<%= team.description%>" required><%= team.description%></textarea>
    </div>
    <div class="mb-3">
        <label for="minAge" class="form-label">Minimum Age</label>
        <input type="number" id="minAge" name="minAge" value="<%= team.minAge%>" class="form-control" required/>
    </div>
    <div class="mb-3">
        <label for="level" class="form-label">Level</label>
        <input type="text" id="level" name="level" value="<%= team.level%>" class="form-control" required/>
    </div>
    <div class="mb-3">
        <label for="contactEmail" class="form-label">Contact Email</label>
        <input type="email" id="contactEmail" name="contactEmail" value="<%= team.contactEmail%>" class="form-control" required/>
    </div>
    <div class="mb-3">
        <label for="contactPhone" class="form-label">Contact Phone Number</label>
        <input type="text" id="contactPhone" name="contactPhone" class="form-control" value="<%= team.contactPhone%>" required/>
    </div>
    <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <input type="text" id="address" name="address" class="form-control" value="<%= team.address%>" required/>
    </div>

    <input type="hidden" name="id" value="<%= team._id%>" />

    <br>

    <button type="submit" class="btn btn-outline-primary">Update Team Details</button>
</form>

